apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: fluentd
spec:
  selector:
    matchLabels:
      name: fluentd
  template:
    metadata:
      labels:
        name: fluentd
    spec:
      containers:
      - name: fluentd
        image: fluent/fluentd:v1.11-debian
        volumeMounts:
        - name: config-volume
          mountPath: /fluentd/etc
        ports:
        - containerPort: 24224
          name: forward
          protocol: TCP
      volumes:
      - name: config-volume
        configMap:
          name: fluentd-config
